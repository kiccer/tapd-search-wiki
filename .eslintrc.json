{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true
        }],
        "no-new": "off",
        "camelcase": ["error", {
            "allow": ["GM_addStyle"]
        }]
    }
}